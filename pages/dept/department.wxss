/* pages/dept/deparment.wxss */
.weui-label {
    width:150rpx;
}
.department .weui-tab-bg{
    background:#fff;
    margin-bottom:20rpx;
}
.department .date{
    height:170rpx;
    background-color:#fff;
    padding:0 20rpx;
}
.button {
    display:inline-block;
    width: 90rpx;
    height: 45rpx;
    line-height: 45rpx;
    background: #4582ec;
    text-align:center;
    color: #fff;
    border-radius: 8rpx;
    vertical-align: bottom;
}
.icon-location-empty {
    font-size: 64rpx;
}
.card {
    margin: 20rpx 0;
}
.weui-navbar__item {
    background: #fff;
    padding: 16rpx 0;
}
.weui-navbar__slider {
    width: 50%;
    background: #2485f0;
}
.weui-navbar__item.weui-bar__item_on {
    color: #2485f0;
}
.weui-label {
    font-size: 32rpx;
}
.dept-box {
    padding: 16rpx;
}
.dept-box .head {
    position: relative;
}
.dept-box .title {
    font-size: 36rpx;
    margin:8rpx 0 16rpx 0;
}
.dept-box .distance {
    display: inline-block;
    font-size: 24rpx;
    padding: 0 16rpx;
    background: #f1fef4;
    position: absolute;
    top: 10rpx;
    right: 10rpx;
    border-radius: 12rpx;
    color: #04b461;
}
.dept-box .content {
    overflow: auto;
}
.content .icon {
    width: 40rpx;
    display: inline-block;
    color: #909399;
}
.content .text {
    width: calc(100% - 50rpx);
    display: inline-block;
    color: #909399;
    margin-left: 10rpx;
}
.content .tel {
    color: #2485f0;
    display: inline-block;
}
.content .tel:nth-child(2) {
    margin-left: 30rpx;
}
.map_container{ 
    width: 100%;
} 
.map { 
    height: 100%; 
    width: 100%; 
}
.weui-navbar .weui-navbar__item .weui-navbar__title {
    line-height: 90rpx;
}
.sug_info {
    position: absolute;
    top: 180rpx;
    width: 100%;
    right: 0;
    z-index: 999;
}
.info {
    background-color: #fff;
    border-radius: 10rpx;
    overflow-y: auto;
    z-index: 100;
    max-height: 600rpx;
    overflow: auto;
    margin:0 15rpx;
    box-shadow: 0 4rpx 12rpx 0 rgba(0,0,0,.1);
}
.address-info {
    display: block;
    border-bottom: 1px solid #eee;
    padding: 20rpx 0;
    margin: 0 30rpx;
}
    