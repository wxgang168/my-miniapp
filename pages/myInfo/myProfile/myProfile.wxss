/**index.wxss**/

.my-head {
    padding: 45rpx 0 65rpx;
    text-align: center;
    background: #fff;
}
.my-head .img {
    width: 140rpx;
    height: 140rpx;
    margin: auto;
    overflow: hidden;
    border-radius: 50%;
}
.my-head .img image {
    width: 100%;
    height: 100%;
}
.my-head .tel {
    margin-top: 30rpx;
    font-size: 38rpx;
}
.my-main{
    padding: 20rpx 0;
    margin-top: 20rpx;
    background-color: #fff;
}
.main-demo{
    width: 250rpx;
    height: 120rpx;
    float: left;
    padding: 40rpx 0;
    font-size: 0;
}
.main-demo .icon{
    display: block;
    color: #2485f0;
    font-size: 68rpx;
    text-align: center;
    height: 66rpx;
}
.main-demo .label{
    display: block;
    text-align: center;
    margin-top: 20rpx;
    font-size: 32rpx;
}
.login-out {
    margin-top: 10rpx;
    padding: 30rpx;
    text-align: center;
    font-size: 38rpx;
    background: #fff;
}
.weui-grids {
    background: #fff;
}
.vux-header {
    background-color: #2485f0;
}
.vux-header .vux-header-left a,
.vux-header .vux-header-right a {
    color: #fff;
}
.vux-header .vux-header-left .left-arrow:before {
    border: 1px solid #fff;
    border-width: 1px 0 0 1px;
    -webkit-transform: rotate(315deg);
    transform: rotate(315deg);
    top: 8px;
    left: 7px;
}